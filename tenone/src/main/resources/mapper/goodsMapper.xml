<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hyesun.tenone.mapper.GoodsMapper">
	
	<select id="selectCategory" resultType="Goods" parameterType="String">
		SELECT *
		FROM tb_goods
		WHERE cateCode = #{cateCode}
	</select>
	
	<select id="selectShopName" resultType="String" parameterType="String">
		SELECT shop_name
		FROM tb_goods
		JOIN user_info
		ON tb_goods.sellerId = user_info.user_id
		WHERE sellerId = #{sellerId}
	</select>
	
</mapper>